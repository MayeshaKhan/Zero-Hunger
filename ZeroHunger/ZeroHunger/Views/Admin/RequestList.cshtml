

@model List<ZeroHunger.EF.Request>
@{
    ViewBag.Title = "RequestList";
}
<h2>RequestList</h2>


@if (TempData["msg"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["msg"]
    </div>
}
<h2>Index</h2>
@{
    if (Model.Count == 0)
    {
        <h1>No Request has been done</h1>
    }
    else
    {
        <table class="table table-bordered">
            <tr>
                <th class="link">ID</th>
                <th>Order Date</th>
                <th>Expire Date</th>
                <th>Total Quantity</th>
                <th>Requested By</th>
                <th>Assigned to</th>
                <th>Assgined by</th>
                <th>Status</th>
            </tr>
            @foreach (var request in Model)
            {
                <tr>
                    <th>@request.Id</th>
                    <th>@request.OrderTime</th>
                    <th>@request.Expiry</th>
                    <th>@request.Quantity</th>
                    <th>
                        <a href="/admin/restaurantDetails/@request.Restaurant.Id.ToString()">
                            @request.Restaurant.Username
                        </a>
                    </th>
                    <th>@(request.Emp_Id != null ? request.Employee.Username : "Not assigned")</th>
                    <th>@(request.Admin_Id != null ? request.Admin.Username : "Not assigned")</th>
                    <th>@request.Status</th>
                    <th><a href="/admin/requestdetails/@request.Id" class="btn btn-link">Details</a></th>
                </tr>
            }
        </table>

    }
}
<a href="/Admin/Index" class="btn btn-success">Go to Index</a>

