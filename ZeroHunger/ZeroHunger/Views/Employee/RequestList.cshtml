

@model List<ZeroHunger.EF.Request>
@{
    ViewBag.Title = "Requestlist";

}

<h2>requestlist</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["msg"]
    </div>
}
<h2>Index</h2>
@{
    if (Model.Count == 0)
    {
        <h1>No Request has been done</h1>
    }
    else
    {
        <table class="table table-bordered">
            <tr>
                <th>ID</th>
                <th>Order Date</th>
                <th>Expire Date</th>
                <th>Total Quantity</th>
                <th>Requested By</th>
                <th>Details</th>
                <th>Status</th>
            </tr>
            @foreach (var request in Model)
            {
                <tr>
                    <th>@request.Id</th>
                    <th>@request.OrderTime</th>
                    <th>@request.Expiry</th>
                    <th>@request.Quantity</th>
                    <th>
                        <a href="/employee/restaurantDetails/@request.Restaurant.Id.ToString()">
                            @request.Restaurant.Username
                        </a>
                    </th>
                    <th><a href="/employee/requestdetails/@request.Id" class="btn btn-link">Details</a></th>
                    <th>
                        @request.Status
                        @if (request.Status != "collected")
                        {
                            <a href="/employee/collectRequest/@request.Id.ToString()">Collect</a>
                        }
                    </th>
                </tr>
            }
        </table>
    }
}


<a href="/Employee/Index" class="btn btn-primary">Go to Index</a>